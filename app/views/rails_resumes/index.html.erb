<h1>RailsResumes#index</h1>
<p>Find me in app/views/rails_resumes/index.html.erb</p>

<% if !flash[:notice].blank? %>
	<div class="alert alert-info">
		<%= flash[:notice] %>
	</div>
<% end %>

<br />

<%= link_to "New Resume", new_rails_resume_path, class: "btn btn-primary" %>
<br />
<br />

<table class ="table table-bordered table-striped">
	<thead>
	<tr>
	<th>Name</th>
	<th>Download link </th>
	<th> </th>

	</tr>
	</thead>
	<tbody>
		<% @resumes.each do |resume| %>
		<tr>
		<td><%= resume.name %></td>
		<td><%= link_to "Download Resume", resume.attachment_url %></td>
		<td><%= button_to "Delete", resume, method: :delete, class:"btn btn-danger", confirm:"Are you sure" %></td>
		</tr>
		<% end %>
	</tbody>
</table>